{
  "name": "astro-parcel-workspace",
  "version": "0.4.0",
  "private": true,
  "description": "Build and optimize your Astro project using Parcel",
  "repository": "https://github.com/aminya/astro-parcel",
  "license": "Apache-2.0",
  "author": "Amin Yahyaabadi",
  "scripts": {
    "build": "pnpm -r run build && shx cp ./README.md ./packages/astro-parcel/README.md",
    "bump": "pnpm -r exec ncu -u -x execa && typesync --ignoredeps=dev && pnpm update",
    "clean": "shx rm -rf **/dist/",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepare": "npm run build",
    "publish": "pnpm -r publish",
    "test": "run-p test.cspell test.format test.lint",
    "test.cspell": "cspell lint --no-progress --show-suggestions",
    "test.format": "prettier . --check",
    "test.lint": "eslint ."
  },
  "prettier": "prettier-config-atomic",
  "devDependencies": {
    "@types/node": "^18.0.6",
    "cspell": "^6.4.0",
    "eslint": "^8.20.0",
    "eslint-config-atomic": "^1.18.1",
    "npm-check-updates": "^15.3.4",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1",
    "prettier-config-atomic": "^3.0.10",
    "shx": "^0.3.4",
    "typescript": "^4.7.4",
    "typesync": "^0.9.2"
  },
  "engines": {},
  "keywords": [
    "parcel",
    "astro",
    "astro-parcel",
    "astrobuild",
    "parceljs",
    "build",
    "bundle",
    "plugin",
    "html",
    "posthtml",
    "relative",
    "relative-path",
    "path",
    "root",
    "url",
    "relative-attribute",
    "attribute"
  ],
  "packages": [
    "./packages/*"
  ],
  "pnpm": {
    "overrides": {
      "typescript": "^4.7.4"
    }
  }
}
